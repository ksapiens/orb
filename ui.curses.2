module Visual
	attr_accessor :x, :y, :color
	def draw x,y,win
		#UILOG.debug self.class.to_s
		color = self.class.to_s.downcase.to_sym
		to_s.draw x,y,color,win
	end	
end	

class Tag;	include Visual
	def to_s;		name;									end
end
